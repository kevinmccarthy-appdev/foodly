<div class="page-header">
  <h1>
    Restaurants
    <a href="/restaurants/new" class="btn btn-lg btn-success">New Restaurant</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Address</th>
        <th>City</th>
        <th>Zipcode</th>
        <th>Cuisine</th>
        <th>Foodly rating</th>
        <th>Yelp rating</th>
        <th>Yelp url</th>
        <th>Newspaper rating</th>
        <th>Newspaper url</th>
        <th>Infatuation rating</th>
        <th>Infatuation url</th>
        <th>Google rating</th>
        <th>Google url</th>
        <th>Actions</th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.price %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.zipcode %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.foodly_rating %></td>
        <td><%= restaurant.yelp_rating %></td>
        <td><%= restaurant.yelp_url %></td>
        <td><%= restaurant.newspaper_rating %></td>
        <td><%= restaurant.newspaper_url %></td>
        <td><%= restaurant.infatuation_rating %></td>
        <td><%= restaurant.infatuation_url %></td>
        <td><%= restaurant.google_rating %></td>
        <td><%= restaurant.google_url %></td>
        <td>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">Show</a>
          <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
